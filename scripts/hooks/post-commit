echo "Running Code Sniffer Drupal & DrupalPractice for ./ ..."
./vendor/bin/phpcs --config-set installed_paths `pwd`/vendor/drupal/coder/coder_sniffer
./vendor/bin/phpcs --standard=Drupal --colors --extensions=php,module,inc,install,test,profile,theme,css,info,md --ignore=*/vendor/* --encoding=utf-8 ./src
./vendor/bin/phpcs --standard=DrupalPractice --colors --extensions=php,module,inc,install,test,profile,theme,css,info,md --ignore=*/vendor/* --encoding=utf-8 ./src
