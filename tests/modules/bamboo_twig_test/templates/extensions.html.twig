<div class="test-extensions">

  <!-- Twig Extensions Text -->
  <h2>Twig Extensions Text - Truncat</h2>
  <hr>
  <div class="text-truncat-1">{{ "This is a very long sentence."|bamboo_extensions_truncate(2, false, '...') }}</div>
  <div class="text-truncat-2">{{ "This is a very long sentence."|bamboo_extensions_truncate(6, false, '...') }}</div>
  <div class="text-truncat-3">{{ "This is a very long sentence."|bamboo_extensions_truncate(2, true, '...') }}</div>
  <div class="text-truncat-4">{{ "This is a very long sentence."|bamboo_extensions_truncate(2, true, '[...]') }}</div>
  <div class="text-truncat-5">{{ "This is a very long sentence."|bamboo_extensions_truncate(23, false, '...') }}</div>
  <div class="text-truncat-6">{{ "This is a very long sentence."|bamboo_extensions_truncate(23, true, '...') }}</div>

  <!-- Twig Extensions Array -->
  <h2>Twig Extensions Array - Shuffle</h2>
  <hr>
  {% set ar = [1, 2, 3]|bamboo_extensions_shuffle %}
  <div class="array-shuffle-1">{{ ar|join(', ') }}</div>
  {% set ar = {'a': 'apple', 'b': 'orange', 'c': 'citrus'}|bamboo_extensions_shuffle %}
  <div class="array-shuffle-2">{{ ar|join(', ') }}</div>

